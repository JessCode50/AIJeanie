#--------------------------------------------------------------------
# Environment Configuration for AI Contact Manager
#--------------------------------------------------------------------

# ENVIRONMENT
# Set to development, testing, or production
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8084/'
app.indexPage = ''
app.forceGlobalSecureRequests = false

# ENCRYPTION
# Generate a secure key with: php spark key:generate
# Or manually set a 32-character random string
app.encryptionKey = your-32-character-encryption-key-here

# SESSION
app.sessionDriver = CodeIgniter\Session\Handlers\FileSessionHandler
app.sessionCookieName = ci_session
app.sessionExpiration = 7200
app.sessionSavePath = null
app.sessionMatchIP = false
app.sessionTimeToUpdate = 300
app.sessionRegenerateDestroy = false

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = Contacts
database.default.username = root
database.default.password = Maria.Jess06
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

#--------------------------------------------------------------------
# OPENAI API CONFIGURATION
#--------------------------------------------------------------------

# Your OpenAI API Key (get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY = your-openai-api-key-here

#--------------------------------------------------------------------
# CPANEL/WHM API CONFIGURATION  
#--------------------------------------------------------------------

# Default cPanel/WHM settings (can be overridden in code)
CPANEL_WHM_HOST = janus13.easyonnet.io
CPANEL_WHM_PORT = 2087
CPANEL_WHM_USER = root
CPANEL_WHM_TOKEN = your-cpanel-token-here

#--------------------------------------------------------------------
# WHMCS API CONFIGURATION
#--------------------------------------------------------------------

# WHMCS API settings
WHMCS_URL = https://portal.easyonnet.io/includes/api.php
WHMCS_IDENTIFIER = your-whmcs-identifier-here
WHMCS_SECRET = your-whmcs-secret-here

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------

logger.threshold = 4

#--------------------------------------------------------------------
# CORS SETTINGS
#--------------------------------------------------------------------

# Allowed origins for CORS (frontend URL)
cors.allowedOrigins = http://localhost:5173

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

# Content Security Policy
security.csrfProtection = 'cookie'
security.tokenRandomize = true
security.tokenName = 'csrf_token_name'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'csrf_cookie_name'
security.expires = 7200

#--------------------------------------------------------------------
# MAIL
#--------------------------------------------------------------------

# Email configuration (if needed)
email.protocol = smtp
email.SMTPHost = your-smtp-host
email.SMTPUser = your-smtp-username
email.SMTPPass = your-smtp-password
email.SMTPPort = 587
email.mailType = html 